{
	"version": "2.0.0",
    "tasks": [
		{
            "label": "Clean Build Directory",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
				"-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Clean Build Directory",
            "problemMatcher": [],
            "detail": "Configure CMake project"
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "CMake: Configure",
            "problemMatcher": [],
            "detail": "Build CMake project"
        }
    ]
}